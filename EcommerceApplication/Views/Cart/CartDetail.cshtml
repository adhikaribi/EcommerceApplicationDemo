@{
    ViewBag.Title = "Ecommerce Application";
}

<div class="jumbotron">
    <a href="~/" class="btn btn-success btn-lg">Home</a>
    <p>View Price of Your Cart Items Below and Click Checkout</p>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>Product Id</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th>Sum</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
             @{ double total = 0.0; }
             @foreach (var result in Model)
             {
                    <tr class="success">
                        <td>@result.productId</td>
                        <td>@result.name</td>
                        <td>@result.price</td>
                        <td>@result.qty</td>
                        <td>@(result.price * result.qty)</td>
                        <td><a href="@Url.Content(String.Format("/Cart/DeleteItem/{0}", result.productId))"  class='btn btn-error btn-lg'>Delete</a></td>
                        @{ total += result.price * result.qty; }
                    </tr>
             }
             @{ Session["Total"] = total; }
             <tr class="info"><td></td><td></td><td></td><td>Total Price : </td><td>$ @total</td></tr>
            </tbody>
        </table>
        <p><a href="/Checkout/Index" class='btn btn-primary btn-lg'>Proceed to Checkout</a></p>
    </div>
</div>